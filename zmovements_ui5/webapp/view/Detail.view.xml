<mvc:View
    controllerName="com.sap.mov.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <m:Page
        id="detailPage"
        title="{i18n>detailTitle}"
        showNavButton="true"
        navButtonPress="onNavBack"
        busy="{appView>/busy}"
        busyIndicatorDelay="{appView>/delay}">
        <m:headerContent>
            <m:Button
                id="deleteMovementButton"
                icon="sap-icon://delete"
                type="Negative"
                press="onDeleteMovementPress"/>
        </m:headerContent>
        <m:content>
            <f:SimpleForm
                id="movementDetailForm"
                editable="false"
                layout="ResponsiveGridLayout"
                labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0"
                columnsXL="1" columnsL="1" columnsM="1"
                breakpointM="768"
                class="sapUiSmallMarginTop">
                <f:content>
                    <core:Title id="_IDGenTitle" text="{i18n>movementDetails}"/>
                    <m:Label id="_IDGenLabel1" text="{i18n>movIdColumn}"/>
                    <m:Text id="_IDGenText" text="{MovId}"/>
                    <m:Label id="_IDGenLabel2" text="{i18n>movTypeColumn}"/>
                    <m:Text id="_IDGenText1" text="{MovType}"/>
                    <m:Label id="_IDGenLabel3" text="{i18n>descriptionColumn}"/>
                    <m:Text id="_IDGenText2" text="{Description}"/>
                    <m:Label id="_IDGenLabel4" text="{i18n>movDateColumn}"/>
                    <m:Text id="_IDGenText3" text="{
                        path: 'MovDate',
                        type: 'sap.ui.model.type.Date',
                        formatOptions: {
                            style: 'long'
                        }
                    }"/>
                    <m:Label id="_IDGenLabel5" text="{i18n>createdByColumn}"/>
                    <m:Text id="_IDGenText4" text="{CreatedBy}"/>
                    <m:Label id="_IDGenLabel6" text="{i18n>createdAtColumn}"/>
                    <m:Text id="_IDGenText5" text="{
                        path: 'CreatedAt',
                        type: 'sap.ui.model.type.DateTime',
                        formatOptions: {
                            style: 'medium'
                        }
                    }"/>

                    <core:Title id="_IDGenTitle1" text="{i18n>movementItems}"/>
                    <m:Table id="itemTable"
                        items="{ItemSet}"
                        noDataText="{i18n>noItemsAdded}"
                        growing="true"
                        growingScrollToLoad="true"
                        growingThreshold="10">
                        <m:columns>
                            <m:Column id="_IDGenColumn"><m:Text id="_IDGenText6" text="{i18n>itemIdColumn}"/></m:Column>
                            <m:Column id="_IDGenColumn1"><m:Text id="_IDGenText7" text="{i18n>productIdColumn}"/></m:Column>
                            <m:Column id="_IDGenColumn2"><m:Text id="_IDGenText8" text="{i18n>quantityColumn}"/></m:Column>
                            <m:Column id="_IDGenColumn3"><m:Text id="_IDGenText9" text="{i18n>unitColumn}"/></m:Column>
                        </m:columns>
                        <m:items>
                            <m:ColumnListItem id="_IDGenColumnListItem">
                                <m:cells>
                                    <m:Text id="_IDGenText10" text="{ItemId}"/>
                                    <m:Text id="_IDGenText11" text="{ProductId}"/>
                                    <m:Text id="_IDGenText12" text="{Quantity}"/>
                                    <m:Text id="_IDGenText13" text="{Unit}"/>
                                </m:cells>
                            </m:ColumnListItem>
                        </m:items>
                    </m:Table>
                </f:content>
            </f:SimpleForm>
        </m:content>
    </m:Page>
</mvc:View>